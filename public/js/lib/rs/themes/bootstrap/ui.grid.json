{
    "DefViews": {
        "cellBackground": null,
        "font" : "14px Arial, sans-serif",
        "color": "rgb(0,0,0)"
    },

    "DefEditors" : {
        "TextField": {
            "inheritProperties" : true,
            "border": {"@zebkit.draw.Border":  "black" },
            "background": null
        },

        "Combo": {
            "inheritProperties" : true,
            "border":null
        },

        "Checkbox": {
            "inheritProperties" : true,
            "layout": { "@zebkit.layout.FlowLayout": [ "center", "center" ]},
            "border": { "@zebkit.draw.Border":  "%{zebkit.ui.palette.highlightColor}" }
        }
    },

    "BaseCaption": {
        "background" : { "@zebkit.draw.Gradient" : [ "white", "lightGray" ] }
    },

    "CompGridCaption" :{
        "inheritProperties" : true,

        "StatusPan": {
            "view" : {
                "*"       : { "@zebkit.draw.ArrowView" : [ "left", "black" ], "width" : 9, "height" : 9  },
                "ascent"  : { "@zebkit.draw.ArrowView" : [ "top", "%{zebkit.ui.palette.mainColor}"  ]   },
                "descent" : { "@zebkit.draw.ArrowView" : [ "bottom", "%{zebkit.ui.palette.mainColor}" ] }
            }
        },

        "TitlePan": {
            "padding":6
        },

        "Link": {
            "font"  : "bold",
            "colors"      : {
                "pressed.over" : "%{zebkit.ui.palette.overColor}",
                "out"          : "black",
                "over"         : "#48732b",
                "pressed.out"  : "#48732b",
                "disabled"     : "gray"
            }
        }
    },

    "LeftCompGridCaption" :{
        "inheritProperties" : true
    },

    "GridCaption" :{
        "inheritProperties" : true,

        "padding"  : 4,
        "font"     : "%{zebkit.ui.boldFont}",
        "fontColor": "rgb(0, 0, 0)",
        "color"    : "black"
    },

    "LeftGridCaption" :{
        "inheritProperties" : true
    },

    "Grid": {
        "CornerPan" : {
            "inheritProperties" : true,
            "background" : { "@zebkit.draw.Gradient" : [ "white", "lightGray" ] }
        },

        "views" : {
            "focusOnSelect"  : "%{zebkit.ui.palette.highlightColor}",
            "focusOffSelect" : "%{zebkit.ui.palette.selectColor}"
        },

        "lineColor": "black",
        "lineSize": 1
    }
}